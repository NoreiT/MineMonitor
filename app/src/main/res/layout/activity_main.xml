<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/aeonMedBlue"
    tools:context="com.jimmyfo.cyrpto.minemonitor.MainActivity">

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Network"
                    style="@style/TextColor"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border">
                    <TableRow>
                        <TextView
                            android:text="Hash Rate: "
                            style="@style/TextColor"/>
                        <TextView
                            android:id="@+id/networkHashRateText"
                            android:text="N/A"
                            style="@style/TextColor"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Found: "
                            style="@style/TextColor"/>
                        <TextView
                            android:id="@+id/networkFoundText"
                            android:text="N/A"
                            style="@style/TextColor"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Difficulty: "
                            style="@style/TextColor"/>
                        <TextView
                            android:id="@+id/difficultyText"
                            android:text="N/A"
                            style="@style/TextColor"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Height: "
                            style="@style/TextColor"/>
                        <TextView
                            android:id="@+id/heightText"
                            android:text="N/A"
                            style="@style/TextColor"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Last Reward: "
                            style="@style/TextColor"/>
                        <TextView
                            android:id="@+id/lastRewardText"
                            android:text="N/A"
                            style="@style/TextColor"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Last Hash: "
                            style="@style/TextColor"/>
                        <TextView
                            android:id="@+id/lastHashText"
                            android:text="N/A"
                            style="@style/TextColor"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pool"
                    style="@style/TextColor"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border">
                    <TableRow>
                        <TextView
                            android:text="Hash Rate: "
                            style="@style/TextColor"/>
                        <TextView
                            android:id="@+id/poolHashRateText"
                            android:text="N/A"
                            style="@style/TextColor"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Found: "
                            style="@style/TextColor"/>
                        <TextView
                            android:id="@+id/poolFoundText"
                            android:text="N/A"
                            style="@style/TextColor"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Miners: "
                            style="@style/TextColor"/>
                        <TextView
                            android:id="@+id/minersText"
                            android:text="N/A"
                            style="@style/TextColor"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Pool Fee: "
                            style="@style/TextColor"/>
                        <TextView
                            android:id="@+id/poolFeeText"
                            android:text="N/A"
                            style="@style/TextColor"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Block Every: "
                            style="@style/TextColor"/>
                        <TextView
                            android:id="@+id/blockEveryText"
                            android:text="N/A"
                            style="@style/TextColor"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Difficulty: "
                            style="@style/TextColor"/>
                        <TextView
                            android:id="@+id/currentDifficultyText"
                            android:text="N/A"
                            style="@style/TextColor"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Hashes: "
                            style="@style/TextColor"/>
                        <TextView
                            android:id="@+id/hashesSubmittedText"
                            android:text="N/A"
                            style="@style/TextColor"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Currently"
                style="@style/TextColor"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TableRow>
                    <TextView
                        android:text="Hashes: "
                        style="@style/TextColor"/>
                    <TextView
                        android:id="@+id/hashesText"
                        android:text="N/A"
                        style="@style/TextColor"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Last Share: "
                        style="@style/TextColor"/>
                    <TextView
                        android:id="@+id/lastShareText"
                        android:text="N/A"
                        style="@style/TextColor"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Balance: "
                        style="@style/TextColor"/>
                    <TextView
                        android:id="@+id/balanceText"
                        android:text="N/A"
                        style="@style/TextColor"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Paid: "
                        style="@style/TextColor"/>
                    <TextView
                        android:id="@+id/paidText"
                        android:text="N/A"
                        style="@style/TextColor"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Hash Rate: "
                        style="@style/TextColor"/>
                    <TextView
                        android:id="@+id/hashrateText"
                        android:text="N/A"
                        style="@style/TextColor"/>
                </TableRow>
            </TableLayout>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/hashrateChart"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/aeonLightBlue"/>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/paymentsChart"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/aeonLightBlue"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payments"
                style="@style/TextColor"/>
            <ScrollView
                android:id="@+id/paymentsScrollView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/border"
                android:minHeight="100dp">
                <LinearLayout
                    android:id="@+id/paymentsLinearLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:text="Refresh Status: "
                    style="@style/TextColor"/>
                <TextView
                    android:id="@+id/refreshStatusText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="10sp"
                    android:text="N/A"
                    style="@style/TextColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:text="Last Refreshed: "
                    style="@style/TextColor"/>
                <TextView
                    android:id="@+id/lastRefreshedText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="10sp"
                    android:text="N/A"
                    style="@style/TextColor"/>
            </LinearLayout>
            <Button
                android:id="@+id/refreshButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@color/aeonDarkBlue"
                android:text="@string/RefreshButton"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dev Info" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/aeonDarkBlue"
                    android:textColorLink="@color/aeonDarkBlue"
                    android:autoLink="email"
                    android:text="@string/ContactEmail"/>
                <LinearLayout
                    android:id="@+id/DevDonationLayoutAEON"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:textColor="@color/aeonDarkBlue"
                            android:text="Donate AEON:"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="8sp"
                            android:textAlignment="center"
                            android:textColor="@color/aeonDarkBlue"
                            android:text="Tap to Copy"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:text="@string/DevDonationAEON"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/DevDonationLayoutXMR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:text="Donate XMR:"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="8sp"
                            android:textAlignment="center"
                            android:text="Tap to Copy"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:text="@string/DevDonationXMR"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>